page {
	background: #fff;
}
.main {
	font-size: 30rpx;
	color: #333333;
	margin: 50rpx 30rpx;
}

.reason {
	font-size: 30rpx;
	font-family: Source Han Sans CN;
	font-weight: 500;
	color: rgba(51, 51, 51, 1);
}

.tip {
	font-size: 24rpx;
	margin-top: 20rpx;
	font-family: Source Han Sans CN;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
}

.content {
	width: 690rpx;
	box-sizing: border-box;
	border-radius: 15rpx;
}

.row {
	display: flex;
	justify-content: space-between;
	overflow: hidden;
	flex-wrap: wrap;
}

.item {
	/* float: right; */
	width: 320rpx;
	height: 90rpx;
	line-height: 90rpx;
	text-align: center;
	border: 1px solid rgba(153, 153, 153, 1);
	border-radius: 45rpx;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
	font-size: 24rpx;
}

.item.active {
	background: linear-gradient(0deg, rgba(21, 109, 241, 1) 0%, rgba(41, 127, 255, 1) 100%);
	border: 0;
	font-family: Source Han Sans CN;
	font-weight: 400;
	color: rgba(255, 255, 255, 1);
}

.next {
	width: 680rpx;
	height: 80rpx;
	line-height: 80rpx;
	background: linear-gradient(0deg, rgba(21, 109, 241, 1) 0%, rgba(41, 127, 255, 1) 100%);
	border-radius: 39rpx;
	text-align: center;
	color: #fff;
	font-size: 40rpx;
	margin: 100rpx auto;
}