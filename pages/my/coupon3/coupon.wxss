.main {
	font-size: 30rpx;
	height: 100%;
	background: rgba(247, 247, 247, 1);
	padding-top: 5rpx;
}

.detail {
	margin: 30rpx;
	width: 680rpx;
	height: 250rpx;
	position: relative;
	background: radial-gradient(circle at right bottom, rgba(19, 93, 241, 0.05) 20rpx, #FFFFFF 0) top right / 51% 162rpx no-repeat,
		radial-gradient(circle at left bottom, rgba(19, 93, 241, 0.05) 20rpx, #FFFFFF 0) top left / 51% 162rpx no-repeat,
		radial-gradient(circle at right top, rgba(19, 93, 241, 0.05) 20rpx, #FFFFFF 0) bottom right / 51% 90rpx no-repeat,
		radial-gradient(circle at left top, rgba(19, 93, 241, 0.05) 20rpx, #FFFFFF 0) bottom left / 51% 90rpx no-repeat;
		box-shadow:0rpx 8rpx 21rpx 3rpx rgba(19,93,241,0.11);
	border-radius: 12rpx;
}

.detail::after {
	content: '';
	width: 600rpx;
	height: 2rpx;
	background-color: rgba(197,207,255,1);
	position: absolute;
	left: 0;
	right: 0;
	top: 170rpx;
	margin: auto;
}

.posimg {
	position: absolute;
	right: 0;
	top: 0;
}

.posimg image {
	width: 47rpx;
	height: 50rpx;
}

.row-box {
	display: flex;
	border-radius: 10rpx;
	padding: 30rpx;
}

.row-box_ed {
	display: flex;
	border-radius: 10rpx;
	padding: 30rpx 20rpx;
}

.money {
	width: 160rpx;
	font-size: 40rpx;
	margin-top: 30rpx;
	text-align: center;
	position: relative;
}

.qian {
	color: #86AFFF;
	margin-top: -30rpx;
}

.money text {
	font-size: 20rpx;
	position: absolute;
	left: 50%;
	margin-left: -30rpx;
}

.qianshuo {
	margin-top: 15rpx;
	font-size: 20rpx;
	color: #999999;
}

.info {
	margin-left: 10rpx;
	flex: 1;
}

.head {
	color: #333333;
	font-size: 26rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
}

.desc {
	font-size: 20rpx;
	color: #333333;
	margin-bottom: 10rpx;
}

.user {
	width: 160rpx;
	background: #ccc;
	color: #fff;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 24rpx;
	border-radius: 30rpx;
	text-align: center;
	position: absolute;
	right: 30rpx;
	bottom: 10rpx;
}
