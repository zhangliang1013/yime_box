}

.contain {
	margin-top: 50rpx;
}

.bang-center .jiao {
	height: 0rpx;
	width: 0rpx;
	border-top: 17rpx solid rgba(219, 219, 219, 1);
	border-left: 9rpx solid transparent;
	border-right: 9rpx solid transparent;
	position: absolute;
	/* bottom: 20rpx; */
	bottom: -16rpx;
	left: 50%;
	transform: translateX(-50%);
}

.contain view {
	font-size: 22rpx;
	font-family: PingFang SC;
	font-weight: 500;
	color: rgba(51, 51, 51, 1);
	line-height: 43rpx;
}

.dao_date {
	width: 100%;
	text-align: center;
