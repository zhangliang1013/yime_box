}

.bang-top {
	width: 480rpx;
	height: 700rpx;
	box-shadow: 2rpx 2rpx 20rpx #e6e6e6;
	margin: 30rpx auto;
	border-radius: 30rpx;
	position: relative;
}

.bang-num {
	font-size: 300rpx;
	font-weight: bold;
	color: #156DF2;
}

.bang-info {
	text-align: center;
	font-size: 42rpx;
	font-weight: bold;
	color: #156DF2;
}

.bang-user {
	display: flex;
	align-items: center;
	position: absolute;
	bottom: 30rpx;
	left: 20rpx;
}

.bang-center {
	width: 440rpx;
	height: 70rpx;
	line-height: 65rpx;
