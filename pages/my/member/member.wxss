	border-radius: 40rpx;
	text-align: center;
	position: relative;
}

.bang-btn {
	width: 380rpx;
	height: 85rpx;
	line-height: 85rpx;
	border-radius: 10rpx;
	background: #156DF2;
	margin: 50rpx auto 20rpx;
	text-align: center;
}

.bang-btn>text {
	color: #fff;
	font-size: 30rpx
}

.agreement {
	text-align: center;
	font-size: 20rpx;
