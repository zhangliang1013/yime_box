/* pages/desc/desc.wxss */
page{
	background: #f7f7f7;
  height: 100%;
}
.touxiang{
	position: absolute;
	top: 70rpx;
	left: 0;
	width: 100%;
}
.touxiang image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	margin: 0 auto;
}
.touming{
	
	background: #000;
	opacity: 0.4;
	border-radius: 30rpx 0 0 30rpx;
}
.touming,.rule-text{
	position: absolute;
	right: 0;
	top: 50rpx;
	width: 150rpx;
	height: 60rpx;
	line-height: 60rpx;
	color: #fff;
	font-size: 30rpx;
	text-align: right;
	padding-right: 30rpx;
}
.pos{
	position: fixed;
	bottom: 0;
	width: 100%;
	background: #fff;
	padding: 30rpx 0;
	text-align: center; 
}
.pizza{
	font-size: 35rpx;
	color: #333;
}
.pizza text{
	color: #f63c30;
}
.tip{
	font-size: 25rpx;
	color: #c8c1b5;
	margin-top: 10rpx;
}
button{
	width: 70%;
	margin: 40rpx auto 0;
	background: #f91e4a;
	color: #fff;
	border-radius: 40rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 35rpx;
}
button:after{
	border:none;
}

.shareBg{width: 100%;height: 100%;position: relative}
.shareBg > image{width: 100%;height: 100%}
.share-content{position: absolute;top: 0;left: 0;width: 100%;height: 100%}
.share-box{width: 100%;height:100%;position: relative}
.share-content-one{width: 116rpx;height: 116rpx;border-radius: 50%;overflow: hidden;position: absolute;top: 40rpx;left: 50%;margin-left: -58rpx;z-index: 9}
.share-content-one >image{width: 116rpx;height: 116rpx}

.share-info{width: 654rpx;height: 147rpx;position: absolute;top: 140rpx;left: 50%;margin-left: -328rpx}
.share-info-box{width: 654rpx;height: 147rpx;position: relative;}
.share-info-box >image{width: 100%;height: 100%;}
.share-info-info{width:100%;height: 100%;position: absolute;top: 0;left: 0;color: #fff;font-size: 28rpx;padding: 10rpx 130rpx 0rpx 130rpx;box-sizing: border-box;text-align: center;}
.money{font-size:130rpx;font-weight: bold;color:#fff;position: absolute;top: 25%;left: 176rpx;width: 200rpx;height: 120rpx;text-align: center}
.already{width: 100%;text-align: center;position: absolute;bottom: 200rpx;left: 0;}
.shareBtn{width: 100%;position: absolute;bottom: 60rpx;}

.shareBtn-box{width: 500rpx;height: 80rpx;position: relative;margin: 0 auto}
.shareBtn-box > image{width: 500rpx;height: 80rpx;}
.rule{width: 160rpx;height: 60rpx;background: rgba(0,0,0,.5);border-top-left-radius: 40rpx;border-bottom-left-radius: 40rpx;text-align: center;line-height: 60rpx;color:#fff;font-size: 24rpx;position: fixed;top: 50rpx;right: 0}
