/* pages/my/pondetail/pondetail.wxss */
.main {
  background: rgba(247, 247, 247, 1);
  height: 100%;
}

.main .header {
  padding: 0 34rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  height: 140rpx;
  align-items: center;
  margin-bottom: 40rpx;
}

.main .header .row1 image {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.main .header .row1 {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

/* .main .header .row .right {
  height: 100rpx;
  width: 50rpx;
} */
.main .header image {
  height: 40rpx;
  width: 40rpx;
}

.main .row {
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 34rpx;
}

.main .row .left {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.main .row .right {
  display: flex;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}
.main .row .right  input {
  text-align: end;
  margin-top: -3rpx;
}
.main .row .right  .input1{
  width: 120rpx;
}
.main .row .right  .input2{
  width: 120rpx;
}
.main .row .right  .input3{
  width: 320rpx;
}

.main .row .right image {
  margin-left: 6rpx;
  height: 40rpx;
  width: 40rpx;
}

.btn {
  margin: 40rpx auto;
  width: 682rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: linear-gradient(0deg, rgba(21, 109, 241, 1) 0%, rgba(41, 127, 255, 1) 100%);
  border-radius: 35rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}