/**index.wxss**/
page{height: 100%}
.jixuan {
	width:750rpx;
	background-color: #f8f8f8;
	padding-top: 20rpx;
	padding-bottom: 40rpx;
}
.jixuan .flex{
width:100%;
height:80rpx;
line-height: 80rpx;
padding: 0 35rpx;
box-sizing: border-box;
background:rgba(255,255,255,1);
font-size:24rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(51,51,51,1);
display: flex;
justify-content: space-between;
}
.goBtn{
  width: 350rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  border: 1rpx solid #22badb;
  color: #22badb;
  font-size: 30rpx;
  margin: 30rpx auto
}
.row{
	margin: 18rpx 30rpx 9rpx; 
	background: #FFFFFF;
	border-radius: 30rpx;
	display: flex;
	box-shadow: 0px 5px 13px 0px rgba(19,93,241,0.21);
	height: 312rpx;
}
.row:first-child {
	   margin-top: 0;
}
.left{
	margin: 40rpx 0 0 46rpx;
}

.tou-icon{
  width: 196rpx;
  height: 196rpx;
  border-radius: 30rpx;
  overflow: hidden
}
.tou-icon image{
  height: 196rpx;
	}
	
.work{
	margin: 14rpx 0 0;
	position: relative;
}

.work-bg{
	width: 100%;
	height: 14rpx;
	border-radius: 6rpx;
	background: #E7E7E7;
}
.work-zhi{
	position: absolute;
	left: 0;
	top: 0;
	background: linear-gradient(90deg,rgba(11,100,241,1) 0%,rgba(83,128,224,1) 100%);
	height: 14rpx;
	border-radius: 6rpx;
}
.liliaozhi{
	color: #333;
  font-size: 20rpx;
	text-align: center;
	margin-top: 10rpx;
}
.center{
	margin: 51rpx 40rpx;
	flex: 1;
}
.work-name{
	font-size: 24rpx;
	font-weight: 400;
	color: #333333;
}
.work-price{
	margin: 15rpx 0 0 6rpx;
	display: flex;
	font-size: 40rpx;
	color: #244EF2;
  font-weight: 500
}
.price text{
	font-size: 28rpx;
}
.wen-icon image{
	margin: 0 0 20rpx 8rpx;
	width: 18rpx;
	height: 18rpx;
}
.biao-icon{
	margin-top: 22rpx;
}
.biao-icon image{
	width: 38rpx;
	height: 38rpx;
}
.wait{
	color: #FFBE59;
	margin-top: 6rpx;
  font-size: 18rpx;
}
.right{
	margin-top: 244rpx;
	background: linear-gradient(0deg,#2a7fff 0%,#156df2 100%);
	color: #FFFFFF;
	width: 182rpx;
	height: 70rpx;
	line-height: 66rpx;
	text-align: center;
	border-radius: 15px 0px 15px 0px;
}
.right.xiuxi{
	background: #bbb;
}
.zhezhao{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.7);
	z-index: 666;
}
.pos{
	position: absolute;
	width: 620rpx;
	left: 50%;
	margin-left: -310rpx;
	top: 180rpx;
	background: #fff;
	border-radius: 15rpx;
	color: #333333;
}
.head{
	text-align: center;
	font-size: 30rpx; 
	padding: 25rpx 0;
	font-weight: 500;
	border-bottom: 2rpx solid #EEEEEE;
}
.info{
	margin: 40rpx 40rpx;
}
.deschead{
  font-size: 24rpx;
	font-weight: bold;
}
.desc{
	font-size: 24rpx;
	margin-top: 10rpx;
}
.know{
	padding: 30rpx 0;
	color: #0D62F1;
	text-align: center;
  font-size: 24rpx;
	border-top: 2rpx solid #EEEEEE;
}
.detail_footer {
	width: 100%;
	margin-top: 30rpx;
	text-align: center;
	font-size: 20rpx;
	font-weight: 300;
	color: rgba(21,109,242,1);
}